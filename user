from abc import ABC, abstractmethod

class User(ABC):
    def __init__(self, id, nom, email, password, telephone, ville, adresse, role):
        self.id = id
        self.nom = nom
        self.email = email
        self.password = password
        self.telephone = telephone
        self.ville = ville
        self.adresse = adresse
        self.is_banned = False  
        self.role = role

    def __str__(self):
        return f"[{self.role}] {self.nom} - {self.email} ({self.ville})"